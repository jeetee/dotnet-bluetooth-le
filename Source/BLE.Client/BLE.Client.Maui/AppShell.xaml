<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BLE.Client.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BLE.Client.Maui.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Scanner"
            ContentTemplate="{DataTemplate local:BLEScanner}"
            Route="BLEScanner" />
            
        <ShellContent Title="Log"
            ContentTemplate="{DataTemplate local:LogViewer}"
            Route="LogViewer" />

        <Tab Title="Device">
            <ShellContent Title="Info"
                ContentTemplate="{DataTemplate local:DeviceInfo}"
                Route="DeviceInfo" />
            <ShellContent Title="Characteristics"
                ContentTemplate="{DataTemplate local:DeviceCharacteristics}"
                Route="DeviceCharacteristics" />
        </Tab>
    </TabBar>
</Shell>
