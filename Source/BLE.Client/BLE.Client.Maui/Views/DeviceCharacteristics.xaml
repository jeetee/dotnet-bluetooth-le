<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BLE.Client.Maui.ViewModels"
             x:DataType="vm:BLEDeviceDetailedViewModel"
             x:Class="BLE.Client.Maui.Views.DeviceCharacteristics"
             Title="Device">
	<Grid Margin="5" RowSpacing="8" RowDefinitions="auto, *, auto">
		<Label Grid.Row="0" Text="Characteristics"/>
		<VerticalStackLayout Grid.Row="1">
			<Label Text="{Binding Name}"/>
			<Label Text="{Binding MacAddress}"/>
		</VerticalStackLayout>
        <Button Grid.Row="2" Text="Disconnect" FontSize="32" IsEnabled="{Binding Connected}" Command="{Binding DisconnectCommand}"/>
    </Grid>
</ContentPage>